    <body>
        <header>
            <a href="/index">Buscar</a>
            <a href="/afegir" class="current">Afegir</a>
            <a href="/use">Com utilitzar</a>
        </header>
        <main>
            <div class="name">
                <p class="nomLlibre">Nom del llibre:</p>
                <input autofocus class="form-control" type="text" id="bookTitle" placeholder="Nom del llibre" aria-label="default input example">
            </div>
            <div class="position">
                <p class="posicioLlibre">Posicio del llibre:</p>
                <input class="form-control" type="text" id="bookPosition" placeholder="Posicio del llibre" aria-label="default input example">
            </div>
            <div class="isbn">
                <p class="isbnLlibre">ISBN del llibre:</p>
                <input class="form-control" type="number" id="bookISBN"placeholder="0000000000" aria-label="default input example" min=0>
            </div>
        </main>
        <button-container>
            <button type="button" class="btn btn-primary" id="AddBook">Afegir Llibre</button>
        </button-container>
        <footer>
            <p>Imatge del llibre seleccionat</p>
            <img src="http://books.google.com/books/content?id=UQWGAbeyBw0C&printsec=frontcover&img=1&zoom=1&edge=curl&source=gbs_api" alt="Portada del llibre">
        </footer>

    </body>
